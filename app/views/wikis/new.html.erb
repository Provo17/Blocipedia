
<script>
        $(document).on('turbolinks:load', function() {
          $('input[type="checkbox"].toggle2').bootstrapToggle(); 
        });    
</script>




<div class="page-header" align="center">
    <h1>New Wiki</h1>
</div>    


    <div class="panel">
        <%= form_for @wiki do |f| %>
        
            <div class="form-group panel-heading">
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
            </div>
            
            <div class="form-group panel-body">
                <%= f.label :body %>
                <%= f.text_area :body,  rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
            </div>
            
    
            <% if current_user.admin? || current_user.premium? %>
              <div class="form-inline clearfix" style="margin-bottom: 25px;">
                <%= f.label :Make_wiki_public %>  
                <%= f.check_box :public, class: "toggle2", :data => {size: 'mini', on: 'Yes', onstyle: 'success', off: 'No', offstyle: 'danger' }  do %> 
                <% end %>
              </div>
            <% end %>
    
            <% if current_user.admin? || current_user.premium? %>
    
                  <div class="form-group">
                     <% if current_user && current_user.premium? %>
                         <%= render partial: 'collaborations/form', locals: { f: f, wiki: @wiki, collaborators: @wiki.collaborators } %>
                     <% end %> 
                  </div>
            <% end %>      
            
            <div class="form-group">
              <%= f.submit "Save", class: 'btn btn-success' %>
            </div>
            
       <% end %> 
    </div>    
    
        