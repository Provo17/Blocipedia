<h1>New Wikis</h1>

<div class="row">
    <div class="col-md-8">
        <%= form_for @wiki do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title %>
            </div>
            <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body,  rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
            </div>
            
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
        
        <% if current_user.admin? || current_user.premium? %>
          <div class="form-group">
            <%= f.label :public, class: 'checkbox' do %>
            <%= f.check_box :public %> Public wiki
            <% end %>
          </div>
        <% end %>

    <% if current_user.admin? || current_user.premium? %>
      <h4>Add Collaborators</h4>
      <div class="form-group">
         <% if current_user && current_user.premium? %>
          <%= render partial: 'collaborations/form', locals: { f: f, wiki: @wiki, collaborators: @wiki.collaborators } %>
        <% end %> 
      </div>
    <% end %>      
        

      <% end %>   
    </div>
</div>        