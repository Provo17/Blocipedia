     <script>
        $(document).on('turbolinks:load', function() {
          $('input[type="checkbox"].toggle').bootstrapToggle(); 
        });
    </script>
 
 <h1>Edit Wiki</h1>
 
 <div class="row">
   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>       
              
     <% if current_user && (current_user.admin? || current_user.premium?) %>
              <div class="form-inline clearfix" style="margin-bottom: 25px;">
                <%= f.label :Make_wiki_public %>  
                <%= f.check_box :public, class: "toggle", :data => {size: 'mini', on: 'Yes', onstyle: 'success', off: 'No', offstyle: 'danger' }  do %> 
              </div>
               <% end %>
        
    <div>
        <% unless @wiki.collaborators.empty?  %>
           
          <h4>Collaborators</h4> 
          <ul class="list-group">
            <% @wiki.collaborators.each do |collaborator| %>
                <li class="list-group-item"><%= collaborator.email %> <%= link_to "Remove Collaborator", delete_wiki_collaborator_path(@wiki, id: collaborator.id), method: :put, class: "btn btn-danger" %></li>
            <% end %>
        <% end %>
    </div>
        
       <% end %>
     <% end %>
   </div>
 </div>
