 <h1>Edit Wiki</h1>
 
 <div class="row">
   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>       
       
       <div class="form-group">
       <% if current_user && (current_user.admin? || current_user.premium?) %>
          <%= f.label :public, class: 'checkbox' do %>
          <%= f.check_box :public %> Public wiki
        <% end %>
        
    <% if current_user.admin? || current_user.premium? %>
      <h4>Add Collaborators</h4>
      <div class="form-group">
        <%= f.select "collaborators", options_from_collection_for_select(User.all, :id, :email), {include_blank: true} %>
      </div>
    <% end %>
    
        </div>
       <% end %>
     <% end %>
   </div>
 </div>
